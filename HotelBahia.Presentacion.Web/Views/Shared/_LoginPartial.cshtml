@using Microsoft.AspNetCore.Identity
@using HotelBahia.Presentacion.Web.Models
@inject SignInManager<UserLogin> SignInManager
@inject UserManager<UserLogin> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOut" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bienvenido @UserManager.GetUserName(User)</a>
            </li>
            <li class="nan-item">
                <button type="submit" class="btn btn-warning nav-link ml-2">Cerrar Sesión</button>
            </li>
        </ul>
    </form>
}
