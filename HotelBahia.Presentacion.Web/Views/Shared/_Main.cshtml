
@using Microsoft.AspNetCore.Identity
@using HotelBahia.Presentacion.Web.Models
@inject SignInManager<UserLogin> SignInManager
@inject UserManager<UserLogin> UserManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Dashboard</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900&display=swap" rel="stylesheet">
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/iziToast.min.css" rel="stylesheet"/>
    <link href="~/css/nprogress.css" rel="stylesheet"/>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand bg-info navbar-dark border-bottom">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto"></ul>
            @await Html.PartialAsync("_LoginPartial")
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-controller="Home" asp-action="Index" class="brand-link text-center">
                <span class="brand-text font-weight-light ">Hotel Bahia</span>
            </a>
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/images/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@UserManager.GetUserName(User)</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        @{
                            if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="CheckOut" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Check Out
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Asignaciones" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Asignaciones de Hab.
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="AsignacionesSupervisor" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Asignaciones Super.
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Incidencias" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Gest. Incidencias
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="ObjetosPerdidos" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Gest. Objetos Perdidos
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Evaluaciones" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Eval. Supervisores
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Habitacions" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Mant. Habitaciones
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Empleados" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Mant. Usuarios
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Actividads" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Mant. Actividades
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>

                            }
                            if (User.IsInRole("Limpieza"))
                            {
                                <li class="nav-item">

                                    <a asp-controller="Limpieza" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Limpieza
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                            }
                            if (User.IsInRole("Supervisor"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="Supervision" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Supervisión
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                            }
                            if (User.IsInRole("Mantenimiento"))
                            {
                                <li class="nav-item">

                                    <a asp-controller="Mantenimiento" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fa fa-th"></i>
                                        <p>
                                            Mantenimiento
                                            <!--<span class="right badge badge-danger">New</span>-->
                                        </p>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark font-weight-lighter">@ViewData["Title"]</h1>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <section class="content">
                @RenderBody()
            </section>
        </div>

        <footer class="main-footer">
            Copyright &copy; 2019 Hotel Bahia - All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 2.0
            </div>
        </footer>
        <!-- Control Sidebar -->
    </div>

    <script src="~/MDBootstrap/js/jquery-3.4.1.min.js"></script>
    <script src="~/MDBootstrap/js/popper.min.js"></script>
    <script src="~/js/adminlte.js"></script>
    <script src="~/js/iziToast.min.js"></script>
    <script src="~/js/constants/messages.js"></script>
    <script src="~/js/helpers.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue-resource@1.5.1/dist/vue-resource.min.js"></script>
    <script src="~/js/nprogress.js"></script>
    <script>
        Vue.http.interceptors.push((request, next) => {
            NProgress.start();
            next((response) => {
                NProgress.done();
            });
        });
    </script>
    @await Html.PartialAsync("_NotificationPanel")
    @RenderSection("Scripts", required: false)
</body>
</html>
