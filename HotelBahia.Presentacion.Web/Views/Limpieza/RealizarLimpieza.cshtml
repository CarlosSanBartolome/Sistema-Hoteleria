@using HotelBahia.Presentacion.Web.Helpers
@model RealizarLimpiezaViewModel;
@{
    ViewData["Title"] = "Realizar Limpieza";
    var msj = ViewData["Mensaje"] as Message;
}

<div class="row">
    <div class="col-md-4">
        <div class="box box-primary">
            <form asp-controller="Limpieza" asp-action="RealizarLimpiezaPost" method="post">
                <input type="hidden" asp-for="Habitacion.HabitacionId" name="idHabitacion" />
                <div class="box-header with-border">
                    <h2 class="box-title">Habitacion: @Model.Habitacion.Numero<span></span></h2>
                </div>
                <div class="box-body">
                    <div class="form-group">
                        <h4>Actividades a Realizar:</h4>
                    </div>
                    <div>
                        <ul class="list-group list-group-unbordered">
                            @foreach (var item in Model.Habitacion.HabitacionActividad)
                            {
                                <li class="list-group-item">
                                    @item.Actividad.Descripcion
                                </li>
                            }
                        </ul>
                    </div>
                    <div>
                        @if (msj != null)
                        {
                            <div class="callout callout-@msj.Tipo.ToString()">
                                <p>@msj.Contenido</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Limpieza Realizada</button>
                </div>
            </form>
        </div>
    </div>
</div>

