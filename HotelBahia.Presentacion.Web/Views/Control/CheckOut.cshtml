
@{
    ViewData["Title"] = "CheckOut";
}
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h2>CheckOut</h2>
                <form asp-controller="Control" asp-action="CheckOut" method="post">
                    <div>
                        <label>Numero de Habitación</label>
                        <input id="nroHabitacion" name="nroHabitacion" type="text" class="form-control" />
                    </div>
                    <div>
                        @ViewData["Mensaje"]
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Check Out</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>

